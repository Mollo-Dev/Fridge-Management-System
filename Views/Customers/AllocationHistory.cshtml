@model IEnumerable<AllocationHistory>
@using GRP_03_27.Enums;

@{
    ViewData["Title"] = "Allocation History";
    var customer = ViewBag.Customer as Customer;
}

<style>
    .transition-fade {
        transition: all 0.3s ease-in-out;
    }

        .transition-fade:hover {
            transform: translateY(-2px);
            background-color: rgba(0, 123, 255, 0.04) !important;
        }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .rounded-top-3 {
        border-top-left-radius: 1rem !important;
        border-top-right-radius: 1rem !important;
    }

    .rounded-start-2 {
        border-top-left-radius: 0.5rem !important;
        border-bottom-left-radius: 0.5rem !important;
    }

    .rounded-end-2 {
        border-top-right-radius: 0.5rem !important;
        border-bottom-right-radius: 0.5rem !important;
    }

    .fs-7 {
        font-size: 0.875rem;
    }
</style>

<!-- Enhanced Header Section -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6 fw-bold text-primary mb-2">
            <i class="fas fa-history me-3"></i>Allocation History
        </h1>
        <p class="text-muted mb-0 fs-6">
            <i class="fas fa-building me-1"></i>@customer?.BusinessName
        </p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="ManageFridges" asp-route-id="@customer?.CustomerId" class="btn btn-primary btn-lg">
            <i class="fas fa-refrigerator me-2"></i> Manage Fridges
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Back
        </a>
    </div>
</div>

<!-- Enhanced Customer Summary Card -->
<div class="card shadow-lg border-0 rounded-3 mb-4">
    <div class="card-header bg-gradient-primary text-white py-3 rounded-top-3">
        <h5 class="card-title mb-0 fw-semibold">
            <i class="fas fa-chart-bar me-2"></i>Allocation Overview
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 mb-3">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                        <i class="fas fa-building text-primary fs-5"></i>
                    </div>
                    <div>
                        <h6 class="fw-semibold mb-1">Business Name</h6>
                        <p class="mb-0 text-muted">@customer?.BusinessName</p>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                        <i class="fas fa-user text-primary fs-5"></i>
                    </div>
                    <div>
                        <h6 class="fw-semibold mb-1">Contact Person</h6>
                        <p class="mb-0 text-muted">@customer?.ContactPerson</p>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                        <i class="fas fa-envelope text-primary fs-5"></i>
                    </div>
                    <div>
                        <h6 class="fw-semibold mb-1">Email Address</h6>
                        <p class="mb-0 text-muted">@customer?.Email</p>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12">
                <div class="row text-center">
                    <div class="col-4">
                        <div class="border-end pe-3">
                            <div class="fw-bold text-primary fs-2">@Model.Count()</div>
                            <small class="text-muted">Total Records</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="border-end pe-3">
                            @{
                                var activeAllocations = Model.Count(ah => ah.Action == AllocationAction.Allocated &&
                                !Model.Any(later => later.FridgeId == ah.FridgeId &&
                                later.ActionDate > ah.ActionDate &&
                                later.Action == AllocationAction.Deallocated));
                            }
                            <div class="fw-bold text-success fs-2">@activeAllocations</div>
                            <small class="text-muted">Current Active</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div>
                            @{
                                var lastActivity = Model.FirstOrDefault();
                            }
                            <div class="fw-bold text-info fs-5">
                                @if (lastActivity != null)
                                {
                                    @lastActivity.ActionDate.ToString("MMM dd")
                                }
                                else
                                {
                                    <text>-</text>
                                }
                            </div>
                            <small class="text-muted">Last Activity</small>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="progress" style="height: 8px;">
                        @{
                            var allocationRate = Model.Count() > 0 ?
                            (activeAllocations * 100) / Model.Count(ah => ah.Action == AllocationAction.Allocated) : 0;
                        }
                        <div class="progress-bar bg-success" role="progressbar"
                             style="width: @allocationRate%"
                             aria-valuenow="@allocationRate" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small class="text-muted">Allocation success rate: @allocationRate%</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced History Table -->
<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-light py-3 rounded-top-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0 fw-semibold text-dark">
                <i class="fas fa-list me-2"></i>Allocation History
                <span class="badge bg-primary ms-2 fs-6">@Model.Count() records</span>
            </h5>
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-primary" onclick="exportHistory()">
                    <i class="fas fa-download me-1"></i> Export
                </button>
                <button class="btn btn-sm btn-outline-secondary" onclick="printHistory()">
                    <i class="fas fa-print me-1"></i> Print
                </button>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="historyTable">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3 fw-semibold text-dark">Date & Time</th>
                            <th class="py-3 fw-semibold text-dark">Action</th>
                            <th class="py-3 fw-semibold text-dark">Fridge Details</th>
                            <th class="py-3 fw-semibold text-dark">Action By</th>
                            <th class="py-3 fw-semibold text-dark">Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="transition-fade">
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-semibold text-dark">@item.ActionDate.ToString("MMM dd, yyyy")</span>
                                        <small class="text-muted">@item.ActionDate.ToString("HH:mm:ss")</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @GetActionBadgeClass(item.Action) fs-7">
                                        <i class="@GetActionIcon(item.Action) me-1"></i>@item.Action
                                    </span>
                                </td>
                                <td>
                                    <div>
                                        <h6 class="fw-semibold mb-1 text-dark">@item.Fridge?.Model</h6>
                                        <small class="text-muted">SN: @item.Fridge?.SerialNumber</small>
                                    </div>
                                </td>
                                <td>
                                    @if (item.ActionBy != null)
                                    {
                                        <div>
                                            <span class="fw-medium text-dark">@item.ActionBy.FullName</span>
                                            <small class="text-muted d-block">@item.ActionBy.Email</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">System</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Notes))
                                    {
                                        <span class="d-inline-block text-truncate" style="max-width: 250px;"
                                              data-bs-toggle="tooltip" data-bs-placement="top" title="@item.Notes">
                                            @item.Notes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No notes</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-history fa-4x text-muted opacity-50"></i>
                </div>
                <h5 class="text-muted fw-semibold mb-3">No Allocation History</h5>
                <p class="text-muted mb-4">This customer has no allocation history recorded yet.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="ManageFridges" asp-route-id="@customer?.CustomerId" class="btn btn-primary">
                        <i class="fas fa-refrigerator me-2"></i> Start Allocating
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to Customers
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Enhanced Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-white border-0 py-3">
            <nav aria-label="History pagination">
                <ul class="pagination justify-content-center mb-0">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link rounded-start-2"
                               href="?page=@(ViewBag.CurrentPage - 1)&id=@customer?.CustomerId">
                                <i class="fas fa-chevron-left me-2"></i> Previous
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               href="?page=@i&id=@customer?.CustomerId">@i</a>
                        </li>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link rounded-end-2"
                               href="?page=@(ViewBag.CurrentPage + 1)&id=@customer?.CustomerId">
                                Next <i class="fas fa-chevron-right ms-2"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    });

    function exportHistory() {
        // Simple CSV export implementation
        const table = document.getElementById('historyTable');
        if (!table) return;

        let csv = [];

        // Headers
        const headers = [];
        for (let i = 0; i < table.rows[0].cells.length; i++) {
            headers.push(table.rows[0].cells[i].textContent.trim());
        }
        csv.push(headers.join(','));

        // Data rows
        for (let i = 1; i < table.rows.length; i++) {
            const row = [];
            const cells = table.rows[i].cells;

            for (let j = 0; j < cells.length; j++) {
                row.push(cells[j].textContent.trim().replace(/,/g, ';'));
            }

            csv.push(row.join(','));
        }

        // Download
        const csvContent = "data:text/csv;charset=utf-8," + csv.join('\n');
        const encodedUri = encodeURI(csvContent);
        const link = document.createElement("a");
        link.setAttribute("href", encodedUri);
        link.setAttribute("download", "allocation_history.csv");
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    }

    function printHistory() {
        const printContent = document.getElementById('historyTable');
        if (!printContent) return;

        const printWindow = window.open('', '_blank');

        printWindow.document.write(`
            <html>
                <head>
                    <title>Allocation History - @customer?.BusinessName</title>
                    <style>
                        body { font-family: Arial, sans-serif; margin: 20px; }
                        table { width: 100%; border-collapse: collapse; }
                        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
                        th { background-color: #f8f9fa; }
                        .badge { padding: 4px 8px; border-radius: 4px; font-size: 12px; }
                    </style>
                </head>
                <body>
                    <h2>Allocation History - @customer?.BusinessName</h2>
                    <p>Generated on: @DateTime.Now.ToString("MMMM dd, yyyy HH:mm")</p>
                    ${printContent.outerHTML}
                </body>
            </html>
        `);

        printWindow.document.close();
        printWindow.print();
    }

    // Auto-hide alerts after 5 seconds
    setTimeout(function() {
        var alerts = document.querySelectorAll('.alert');
        alerts.forEach(function(alert) {
            var bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
</script>

@functions {
    public string GetActionBadgeClass(AllocationAction action)
    {
        return action switch
        {
            AllocationAction.Allocated => "bg-success bg-opacity-10 text-success border border-success",
            AllocationAction.Deallocated => "bg-warning bg-opacity-10 text-warning border border-warning",
            AllocationAction.Scrapped => "bg-danger bg-opacity-10 text-danger border border-danger",
            AllocationAction.Received => "bg-info bg-opacity-10 text-info border border-info",
            AllocationAction.StatusChanged => "bg-secondary bg-opacity-10 text-secondary border border-secondary",
            _ => "bg-secondary bg-opacity-10 text-secondary border border-secondary"
        };
    }

    public string GetActionIcon(AllocationAction action)
    {
        return action switch
        {
            AllocationAction.Allocated => "fas fa-plus-circle",
            AllocationAction.Deallocated => "fas fa-minus-circle",
            AllocationAction.Scrapped => "fas fa-trash",
            AllocationAction.Received => "fas fa-truck-loading",
            AllocationAction.StatusChanged => "fas fa-exchange-alt",
            _ => "fas fa-circle"
        };
    }
}