@model IEnumerable<Supplier>
@{
    ViewData["Title"] = "Supplier Management";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-truck"></i> @ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Supplier
        </a>
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="bi bi-search"></i> Search & Filter
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <label for="searchString" class="form-label">Search:</label>
                    <input type="text" name="searchString" class="form-control" placeholder="Supplier name, email, contact, address..." value="@ViewBag.SearchString">
                </div>
                <div class="col-md-2">
                    <label for="pageSize" class="form-label">Page Size:</label>
                    <select name="pageSize" class="form-select">
                        <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                        <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                        <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Suppliers (@ViewBag.TotalCount)</h5>
            @if (ViewBag.TotalPages > 1)
            {
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@i&pageSize=@ViewBag.PageSize&searchString=@ViewBag.SearchString">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Contact Number</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Fridges</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var supplier in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@supplier.Name</strong>
                                    </td>
                                    <td>@supplier.ContactNumber</td>
                                    <td>
                                        <a href="mailto:@supplier.Email" class="text-decoration-none">
                                            @supplier.Email
                                        </a>
                                    </td>
                                    <td>@supplier.Address</td>
                                    <td>
                                        <span class="badge bg-info">@supplier.Fridges?.Count() fridges</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-truck display-1 text-muted"></i>
                    <h4 class="text-muted mt-3">No Suppliers Found</h4>
                    <p class="text-muted">Start by adding your first supplier.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add Supplier
                    </a>
                </div>
            }
        </div>
    </div>
</div>
