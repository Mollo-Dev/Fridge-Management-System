<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Beverage Storage Solutions</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content="Beverage Storage Solutions - A reliable fridge management platform that helps track and manage fridges, maintenance, and customer records efficiently.">
    <meta name="keywords" content="fridge management, beverage storage, maintenance system, fridge tracking, inventory control">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>

<body>
    <!-- Subtle Frost Animation -->
    @for (int i = 0; i < 20; i++)
    {
        <div class="frost" style="left:@(i * 5)% ; animation-duration:@(5 + i % 5)s; animation-delay:@(i * 0.3)s;"></div>
    }

    <!-- Contact Banner -->
    <div class="contact-banner bg-primary text-white py-2 text-center">
        <small>
            <i class="fa fa-phone me-1"></i>Contact us:
            <a href="tel:+27123456789" class="text-white">+27 12 345 6789</a> |
            <a href="mailto:info@beveragestorage.com" class="text-white">info@beveragestorage.com</a>
        </small>
    </div>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light shadow-sm bg-white">
            <div class="container">
                <img src="~/images/logo.png" alt="Logo" style="height:40px; margin-right:10px;">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Beverage Storage Solutions</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About Us</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="mt-5 pt-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-5" id="contact">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <h5 class="text-primary fw-bold">Beverage Storage Solutions</h5>
                    <p>
                        We specialize in managing and maintaining beverage storage systems efficiently.
                        Our platform allows businesses to track fridges, monitor maintenance, and manage customer data seamlessly.
                    </p>
                </div>
                <div class="col-md-6 col-lg-4">
                    <h5 class="fw-bold">Contact Us</h5>
                    <p><i class="fa fa-map-marker me-2"></i>123 Main Street, Port Elizabeth, South Africa</p>
                    <p><i class="fa fa-envelope me-2"></i>info@beveragestorage.com</p>
                    <p><i class="fa fa-phone me-2"></i>+27 12 345 6789</p>
                </div>
                <div class="col-md-6 col-lg-4">
                    <h5 class="fw-bold">Quick Links</h5>
                    <a class="btn btn-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="btn btn-link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                    <a class="btn btn-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    <a class="btn btn-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                </div>
            </div>
            <div class="mt-4 text-center">
                &copy; 2025 Beverage Storage Solutions. Developed by <strong>The Algorithmics</strong>.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
