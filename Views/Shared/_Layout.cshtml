                    {
                        <div class="nav-section">
                            <div class="nav-section-title">Main Navigation</div>
                            <a class="nav-link active" asp-controller="Admin" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i>
                                <span>Dashboard</span>
                                <span class="nav-badge">Admin</span>
                        </a>
                    </div>

                        <div class="nav-section">
                            <div class="nav-section-title">Management</div>
                            <a class="nav-link" asp-controller="AdminCustomers" asp-action="Index">
                                <i class="bi bi-people"></i>
                                <span>Customer Management</span>
                            </a>
                            <a class="nav-link" asp-controller="AdminSuppliers" asp-action="Index">
                                <i class="bi bi-truck"></i>
                                <span>Supplier Management</span>
                            </a>
                            <a class="nav-link" asp-controller="AdminLocations" asp-action="Index">
                                <i class="bi bi-geo-alt"></i>
                                <span>Location Management</span>
                            </a>
                            <a class="nav-link" asp-controller="Fridges" asp-action="Index">
                                <i class="bi bi-refrigerator"></i>
                                <span>Fridge Management</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">System</div>
                            <a class="nav-link" asp-controller="Admin" asp-action="Users">
                                <i class="bi bi-people-gear"></i>
                                <span>User Management</span>
                            </a>
                            <a class="nav-link" asp-controller="Admin" asp-action="Roles">
                                <i class="bi bi-shield-check"></i>
                                <span>Role Management</span>
                            </a>
                            <a class="nav-link" asp-controller="Admin" asp-action="SystemHealth">
                                <i class="bi bi-heart-pulse"></i>
                                <span>System Health</span>
                            </a>
                        </div>
                    }

                    <!-- Customer Liaison -->
                            @if (User.IsInRole("CustomerLiaison"))
                            {
                        <div class="nav-section">
                            <div class="nav-section-title">Main Navigation</div>
                            <a class="nav-link active" asp-controller="Customers" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i>
                                <span>Dashboard</span>
                                <span class="nav-badge">Liaison</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">Customer Management</div>
                            <a class="nav-link" asp-controller="Customers" asp-action="Index">
                                <i class="bi bi-people"></i>
                                <span>All Customers</span>
                            </a>
                            <a class="nav-link" asp-controller="Customers" asp-action="Details">
                                <i class="bi bi-person-lines-fill"></i>
                                <span>Customer Details</span>
                            </a>
                            <a class="nav-link" asp-controller="Customers" asp-action="ManageFridges">
                                <i class="bi bi-hdd-stack"></i>
                                <span>Manage Allocations</span>
                            </a>
                            <a class="nav-link" asp-controller="Customers" asp-action="AllocationHistory">
                                <i class="bi bi-clock-history"></i>
                                <span>Allocation History</span>
                            </a>
                        </div>
                    }

                    <!-- Inventory Liaison -->
                            @if (User.IsInRole("InventoryLiaison"))
                            {
                        <div class="nav-section">
                            <div class="nav-section-title">Main Navigation</div>
                            <a class="nav-link active" asp-controller="Fridges" asp-action="InventoryReport">
                                <i class="bi bi-speedometer2"></i>
                                <span>Inventory Dashboard</span>
                                <span class="nav-badge">Inventory</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">Inventory Management</div>
                            <a class="nav-link" asp-controller="Fridges" asp-action="Index">
                                <i class="bi bi-list-ul"></i>
                                <span>View All Fridges</span>
                            </a>
                            <a class="nav-link" asp-controller="Fridges" asp-action="ReceiveNew">
                                <i class="bi bi-plus-circle"></i>
                                <span>Receive New Fridges</span>
                            </a>
                            <a class="nav-link" asp-controller="Fridges" asp-action="Allocate">
                                <i class="bi bi-arrow-right-circle"></i>
                                <span>Allocate Fridge</span>
                            </a>
                            <a class="nav-link" asp-controller="Fridges" asp-action="Scrap">
                                <i class="bi bi-trash"></i>
                                <span>Scrap Fridge</span>
                            </a>
                        </div>
                    }

                    <!-- Fault Technician -->
                            @if (User.IsInRole("FaultTechnician"))
                            {
                        <div class="nav-section">
                            <div class="nav-section-title">Main Navigation</div>
                            <a class="nav-link active" asp-controller="FaultReports" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i>
                                <span>Fault Dashboard</span>
                                <span class="nav-badge">Technician</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">Fault Management</div>
                            <a class="nav-link" asp-controller="FaultReports" asp-action="Index">
                                <i class="bi bi-exclamation-circle"></i>
                                <span>All Fault Reports</span>
                            </a>
                            <a class="nav-link" asp-controller="FaultReports" asp-action="MyAssigned">
                                <i class="bi bi-person-check"></i>
                                <span>My Assigned Reports</span>
                            </a>
                            <a class="nav-link" asp-controller="FaultReports" asp-action="Diagnose">
                                <i class="bi bi-search"></i>
                                <span>Diagnose Issues</span>
                            </a>
                        </div>
                    }

                    <!-- Maintenance Technician -->
                            @if (User.IsInRole("MaintenanceTechnician"))
                            {
                        <div class="nav-section">
                            <div class="nav-section-title">Main Navigation</div>
                            <a class="nav-link active" asp-controller="Maintenance" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i>
                                <span>Maintenance Dashboard</span>
                                <span class="nav-badge">Maintenance</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">Maintenance Operations</div>
                            <a class="nav-link" asp-controller="Maintenance" asp-action="Index">
                                <i class="bi bi-list-ul"></i>
                                <span>All Maintenance Records</span>
                            </a>
                            <a class="nav-link" asp-controller="Maintenance" asp-action="Schedule">
                                <i class="bi bi-calendar-plus"></i>
                                <span>Schedule Maintenance</span>
                            </a>
                            <a class="nav-link" asp-controller="Maintenance" asp-action="Details">
                                <i class="bi bi-info-circle"></i>
                                <span>Maintenance Details</span>
                            </a>
                            <a class="nav-link" asp-controller="Maintenance" asp-action="Complete">
                                <i class="bi bi-check-circle"></i>
                                <span>Complete Maintenance</span>
                            </a>
                        </div>
                    }

                    <!-- Purchasing Manager -->
                    @if (User.IsInRole("PurchasingManager"))
                    {
                        <div class="nav-section">
                            <div class="nav-section-title">Main Navigation</div>
                            <a class="nav-link active" asp-controller="PurchaseRequests" asp-action="Index">
                                <i class="bi bi-speedometer2"></i>
                                <span>Purchase Dashboard</span>
                                <span class="nav-badge">Purchasing</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">Purchase Management</div>
                            <a class="nav-link" asp-controller="PurchaseRequests" asp-action="Index">
                                <i class="bi bi-list-ul"></i>
                                <span>All Purchase Requests</span>
                            </a>
                            <a class="nav-link" asp-controller="PurchaseRequests" asp-action="Create">
                                <i class="bi bi-plus-circle"></i>
                                <span>Create Purchase Request</span>
                            </a>
                            <a class="nav-link" asp-controller="PurchaseRequests" asp-action="Approve">
                                <i class="bi bi-check-circle"></i>
                                <span>Approve Requests</span>
                            </a>
                        </div>
                    }

                    <!-- Customer -->
                    @if (User.IsInRole("Customer"))
                    {
                        <div class="nav-section">
                            <div class="nav-section-title">Main Navigation</div>
                            <a class="nav-link active" asp-controller="Customer" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i>
                                <span>My Dashboard</span>
                                <span class="nav-badge">Customer</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">My Services</div>
                            <a class="nav-link" asp-controller="Customer" asp-action="MyFridges">
                                <i class="bi bi-refrigerator"></i>
                                <span>My Fridges</span>
                            </a>
                            <a class="nav-link" asp-controller="Customer" asp-action="ReportFault">
                                <i class="bi bi-exclamation-triangle"></i>
                                <span>Report Fault</span>
                            </a>
                            <a class="nav-link" asp-controller="Customer" asp-action="MyFaultReports">
                                <i class="bi bi-list-ul"></i>
                                <span>My Fault Reports</span>
                            </a>
                            <a class="nav-link" asp-controller="Customer" asp-action="RequestNewFridge">
                                <i class="bi bi-plus-circle"></i>
                                <span>Request New Fridge</span>
                            </a>
                        </div>

                        <div class="nav-section">
                            <div class="nav-section-title">Account</div>
                            <a class="nav-link" asp-controller="Customer" asp-action="Profile">
                                <i class="bi bi-person-gear"></i>
                                <span>Edit Profile</span>
                            </a>
                            <a class="nav-link" asp-controller="Customer" asp-action="MaintenanceHistory">
                                <i class="bi bi-clock-history"></i>
                                <span>Maintenance History</span>
                            </a>
                            <a class="nav-link" asp-controller="Customer" asp-action="UpcomingMaintenance">
                                <i class="bi bi-calendar-check"></i>
                                <span>Upcoming Maintenance</span>
                            </a>
                        </div>
                    }

                    <!-- Common Features -->
                    <div class="nav-section">
                        <div class="nav-section-title">Support</div>
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <i class="bi bi-info-circle"></i>
                            <span>About</span>
                        </a>
                                    </div>
                                        </div>

                <div class="logout-section">
                    <form method="post" asp-controller="Account" asp-action="Logout">
                        <button type="submit" class="btn-logout">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                </div>
            </div>

            <!-- Main Content -->
            <div class="content">
                @RenderBody()
                        </div>
                </div>
            }
    else
    {
        <!-- Public Content (Login, Register, etc.) -->
        <div class="content">
            @RenderBody()
                </div>
            }

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Mobile sidebar toggle
            $('.toggle-btn').click(function () {
                $('.sidebar').toggleClass('active');
                $('.overlay').toggleClass('active');
            });

            // Close sidebar when clicking overlay
            $('.overlay').click(function () {
                $('.sidebar').removeClass('active');
                $('.overlay').removeClass('active');
            });

            // Add active class to current page
            $('.nav-link').each(function () {
                if (this.href === window.location.href) {
                    $(this).addClass('active');
                }
            });

            // Smooth animations
            $('.nav-link').hover(
                function () {
                    $(this).css('transform', 'translateX(5px)');
                },
                function () {
                    $(this).css('transform', 'translateX(0)');
                }
            );
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@functions {
            public string GetRoleClass()
            {
                if (User.IsInRole("Administrator")) return "role-admin";
                if (User.IsInRole("FaultTechnician")) return "role-technician";
                if (User.IsInRole("MaintenanceTechnician")) return "role-maintenance";
                if (User.IsInRole("Customer")) return "role-customer";
                if (User.IsInRole("CustomerLiaison")) return "role-customerliaison";
                if (User.IsInRole("InventoryLiaison")) return "role-inventoryliaison";
                if (User.IsInRole("PurchasingManager")) return "role-purchasing";
                return "role-default";
            }

            public string GetRoleTitle()
            {
                if (User.IsInRole("Administrator")) return "System Administrator";
                if (User.IsInRole("FaultTechnician")) return "Fault Technician";
