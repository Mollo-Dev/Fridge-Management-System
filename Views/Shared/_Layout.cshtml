@using Microsoft.AspNetCore.Identity
@using GRP_03_27.Models
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fridge Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 9999"></div>

    <style>
        :root {
            --sidebar-bg: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            --sidebar-text: #ffffff;
            --sidebar-hover: rgba(255, 255, 255, 0.1);
            --sidebar-active: rgba(255, 255, 255, 0.2);
            --accent-color: #ffd700;
            --content-bg: #f8fafc;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--content-bg);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .content-wrapper {
            display: flex;
            min-height: 100vh;
            position: relative;
        }

        /* Premium Sidebar */
        .sidebar {
            width: 280px;
            background: var(--sidebar-bg);
            color: var(--sidebar-text);
            flex-shrink: 0;
            position: relative;
            overflow: hidden;
            box-shadow: 5px 0 25px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

            /* Animated Background */
            .sidebar::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.05)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
                opacity: 0.3;
                z-index: -1;
            }

        .sidebar-header {
            text-align: center;
            padding: 2rem 1.5rem 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: relative;
        }

        .user-avatar {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #ffd700, #ff6b6b);
            border-radius: 50%;
            margin: 0 auto 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            border: 3px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

            .user-avatar::before {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
                transform: rotate(45deg);
                animation: shine 3s infinite;
            }

        @@keyframes shine {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }
            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }

        .user-info h4 {
            margin: 0;
            font-weight: 600;
            font-size: 1.2rem;
        }

        .user-role {
            background: rgba(255, 255, 255, 0.2);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            margin-top: 0.5rem;
            display: inline-block;
            backdrop-filter: blur(10px);
        }

        .sidebar-nav {
            padding: 1.5rem 1rem;
            flex-grow: 1;
        }

        .nav-section {
            margin-bottom: 1.5rem;
        }

        .nav-section-title {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.6);
            margin-bottom: 0.75rem;
            padding: 0 1rem;
            font-weight: 600;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 12px 1rem;
            margin: 4px 0;
            border-radius: 12px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            text-decoration: none;
            position: relative;
            overflow: hidden;
            font-weight: 500;
        }

            .nav-link::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                bottom: 0;
                width: 3px;
                background: var(--accent-color);
                transform: scaleY(0);
                transition: transform 0.3s ease;
            }

            .nav-link:hover {
                background: var(--sidebar-hover);
                color: white;
                transform: translateX(5px);
            }

                .nav-link:hover::before {
                    transform: scaleY(1);
                }

            .nav-link.active {
                background: var(--sidebar-active);
                color: white;
            }

                .nav-link.active::before {
                    transform: scaleY(1);
                }

            .nav-link i {
                margin-right: 12px;
                font-size: 1.1rem;
                width: 20px;
                text-align: center;
            }

        .nav-badge {
            background: var(--accent-color);
            color: #2c3e50;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 0.7rem;
            font-weight: 600;
            margin-left: auto;
        }

        .nav-dropdown {
            background: transparent;
            border: none;
            color: inherit;
            text-align: left;
            width: 100%;
        }

        .nav-collapse {
            margin-left: 2rem;
            border-left: 2px solid rgba(255, 255, 255, 0.1);
            padding-left: 0.5rem;
        }

            .nav-collapse .nav-link {
                padding: 8px 1rem;
                font-size: 0.9rem;
                border-radius: 8px;
            }

        .logout-section {
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: auto;
        }

        .btn-logout {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            width: 100%;
            text-align: center;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            font-weight: 500;
        }

            .btn-logout:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            }

        /* Main Content Area */
        .content {
            flex-grow: 1;
            padding: 2rem;
            background: var(--content-bg);
            position: relative;
        }

        .content-header {
            background: white;
            padding: 1.5rem 2rem;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            border-left: 4px solid #667eea;
        }

        /* Mobile Toggle Button */
        .toggle-btn {
            position: fixed;
            top: 20px;
            left: 20px;
            background: var(--sidebar-bg);
            border: none;
            color: white;
            width: 45px;
            height: 45px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            z-index: 1100;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
        }

            .toggle-btn:hover {
                transform: scale(1.1);
            }

        /* Role-specific accent colors */
        .role-admin {
            --accent-color: #ff6b6b;
        }

        .role-technician {
            --accent-color: #4ecdc4;
        }

        .role-maintenance {
            --accent-color: #45b7d1;
        }

        .role-customer {
            --accent-color: #96ceb4;
        }

        .role-customerliaison {
            --accent-color: #feca57;
        }

        .role-inventoryliaison {
            --accent-color: #ff9ff3;
        }

        .role-purchasing {
            --accent-color: #a8e6cf;
        }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                left: -100%;
                top: 0;
                height: 100%;
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                z-index: 1050;
            }

                .sidebar.active {
                    left: 0;
                }

            .content {
                padding: 1rem;
                margin-left: 0;
            }

            .toggle-btn {
                display: flex;
            }

            .overlay {
            position: fixed;
            top: 0;
            left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 1040;
                display: none;
            }

                .overlay.active {
                    display: block;
                }
        }

        /* Desktop enhancements */
        @@media (min-width: 769px) {
            .toggle-btn {
                display: none;
            }
        }

        /* Smooth animations */
        .nav-link, .btn-logout, .user-avatar {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Scrollbar styling */
        .sidebar-nav::-webkit-scrollbar {
            width: 4px;
        }

        .sidebar-nav::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
        }

        .sidebar-nav::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 2px;
        }
    </style>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <!-- Mobile Toggle Button -->
        <button class="toggle-btn d-md-none">
            <i class="bi bi-list"></i>
        </button>

        <!-- Mobile Overlay -->
        <div class="overlay d-md-none"></div>

        <div class="content-wrapper">
            <!-- Premium Sidebar -->
            <div class="sidebar @GetRoleClass()">
                <div class="sidebar-header">
                    <div class="user-avatar">
                        <i class="bi bi-person-fill"></i>
                    </div>
                    <div class="user-info">
                        @{
                            var fullName = User?.FindFirst("FullName")?.Value ?? User.Identity.Name;
                            var roleClass = GetRoleClass().Replace("role-", "");
                        }
                        <h4>@fullName</h4>
                        <div class="user-role">
                            <i class="bi bi-@GetRoleIcon() me-1"></i>@GetRoleTitle()
                        </div>
                    </div>
                </div>

                <div class="sidebar-nav">
