@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-ban me-2"></i>@ViewData["Title"]
                </h3>
            </div>
            <div class="card-body py-5">
                <div class="mb-4">
                    <i class="fas fa-lock fa-5x text-danger mb-4"></i>
                    <h4 class="text-danger">Access Restricted</h4>
                </div>

                <p class="text-muted mb-4">
                    You don't have permission to access this page.
                    Please contact your administrator if you believe this is an error.
                </p>

                <div class="d-grid gap-2">
                    <a asp-action="Login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt me-2"></i>Return to Login
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-home me-2"></i>Go to Homepage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>