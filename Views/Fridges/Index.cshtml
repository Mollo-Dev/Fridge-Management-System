@model IEnumerable<Fridge>
@using GRP_03_27.Enums;

@{
    ViewData["Title"] = "Fridges";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-refrigerator"></i> @ViewData["Title"]</h1>
    <div class="btn-group">
        <a asp-action="ReceiveNew" class="btn btn-primary">
            <i class="fas fa-truck-loading"></i> Receive New Stock
        </a>
        <a asp-action="InventoryReport" class="btn btn-info">
            <i class="fas fa-chart-pie"></i> Inventory Report
        </a>
    </div>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="statusFilter" class="form-label">Filter by Status:</label>
                <select name="statusFilter" class="form-select" onchange="this.form.submit()">
                    <option value="All">All Statuses</option>
                    @foreach (var status in Enum.GetValues(typeof(FridgeStatus)))
                    {
                        <option value="@status" selected="@(ViewBag.StatusFilter?.SelectedValue?.ToString() == status.ToString())">
                            @status
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label for="supplierFilter" class="form-label">Filter by Supplier:</label>
                <select name="supplierFilter" class="form-select" onchange="this.form.submit()">
                    <option value="All">All Suppliers</option>
                    @if (ViewBag.SupplierOptions != null)
                    {
                        @foreach (var supplier in ViewBag.SupplierOptions as SelectList)
                        {
                            <option value="@supplier.Value" selected="@(ViewBag.SupplierFilter?.ToString() == supplier.Value)">
                                @supplier.Text
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label for="searchString" class="form-label">Search:</label>
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Model, Serial, Customer..." value="@ViewBag.SearchString">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Model</th>
                        <th>Serial Number</th>
                        <th>Status</th>
                        <th>Customer</th>
                        <th>Supplier</th>
                        <th>Purchase Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                                <td>@Html.DisplayFor(modelItem => item.SerialNumber)</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(item.Status)">@item.Status</span>
                                </td>
                                <td>
                                    @if (item.Customer != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.Customer.BusinessName)
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not allocated</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Supplier != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.Supplier.Name)
                                    }
                                    else
                                    {
                                        <span class="text-warning">Unknown Supplier</span>
                                    }
                                </td>
                                <td>@item.PurchaseDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.FridgeId" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                        @if (item.Status == FridgeStatus.Available)
                                        {
                                            <a asp-action="Allocate" asp-route-id="@item.FridgeId" class="btn btn-sm btn-primary">
                                                <i class="fas fa-exchange-alt"></i> Allocate
                                            </a>
                                        }
                                        @if (item.Status != FridgeStatus.Scrapped)
                                        {
                                            <a asp-action="Scrap" asp-route-id="@item.FridgeId" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Scrap
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No fridges found in inventory. 
                                    <a asp-action="ReceiveNew" class="alert-link">Click here to receive new stock</a>.
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Fridge pagination" class="mt-3">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=1&statusFilter=@ViewBag.StatusFilter&supplierFilter=@ViewBag.SupplierFilter&searchString=@ViewBag.SearchString">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&statusFilter=@ViewBag.StatusFilter&supplierFilter=@ViewBag.SupplierFilter&searchString=@ViewBag.SearchString">Previous</a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i&statusFilter=@ViewBag.StatusFilter&supplierFilter=@ViewBag.SupplierFilter&searchString=@ViewBag.SearchString">@i</a>
                        </li>
                    }
                    
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&statusFilter=@ViewBag.StatusFilter&supplierFilter=@ViewBag.SupplierFilter&searchString=@ViewBag.SearchString">Next</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?page=@ViewBag.TotalPages&statusFilter=@ViewBag.StatusFilter&supplierFilter=@ViewBag.SupplierFilter&searchString=@ViewBag.SearchString">Last</a>
                        </li>
                    }
                </ul>
                <div class="text-center text-muted small">
                    Showing @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) to @(Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalCount)) of @ViewBag.TotalCount fridges
                </div>
            </nav>
        }
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(FridgeStatus status)
    {
        return status switch
        {
            FridgeStatus.Available => "bg-success",
            FridgeStatus.Allocated => "bg-primary",
            FridgeStatus.Faulty => "bg-danger",
            FridgeStatus.UnderMaintenance => "bg-warning",
            FridgeStatus.Scrapped => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}