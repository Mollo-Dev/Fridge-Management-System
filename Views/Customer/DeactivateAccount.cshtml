@model Customer
@{
    ViewData["Title"] = "Deactivate Account";
    Layout = "_CustomerLayout";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-user-times"></i> Deactivate Account
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to deactivate your account?
                </div>

                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>What happens when you deactivate:</strong>
                    <ul class="mb-0 mt-2">
                        <li>You will be signed out immediately</li>
                        <li>You won't be able to access your dashboard</li>
                        <li>Your fridges will remain allocated but inactive</li>
                        <li>You can reactivate by contacting customer support</li>
                    </ul>
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Business Name:</dt>
                    <dd class="col-sm-8">@Model.BusinessName</dd>

                    <dt class="col-sm-4">Contact Person:</dt>
                    <dd class="col-sm-8">@Model.ContactPerson</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Current Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Allocated Fridges:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary">@Model.Fridges.Count() fridges</span>
                    </dd>
                </dl>

                <form asp-action="DeactivateAccountConfirmed" method="post">
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-user-times"></i> Yes, Deactivate My Account
                        </button>
                        <a asp-action="Dashboard" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
