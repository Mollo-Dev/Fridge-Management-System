@model IEnumerable<MaintenanceRecord>
@using GRP_03_27.Enums

@{
    ViewData["Title"] = "Maintenance History";
    Layout = "_CustomerLayout";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6">
                <i class="fas fa-tools"></i> @ViewData["Title"]
            </h1>
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="statusFilter" class="form-label">Status Filter</label>
                <select name="statusFilter" class="form-control" onchange="this.form.submit()">
                    <option value="All">All Statuses</option>
                    @foreach (var status in Enum.GetValues(typeof(MaintenanceStatus)).Cast<MaintenanceStatus>())
                    {
                        <option value="@status" selected="@(ViewBag.StatusFilter?.ToString() == status.ToString())">
                            @status.ToString()
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label for="typeFilter" class="form-label">Type Filter</label>
                <select name="typeFilter" class="form-control" onchange="this.form.submit()">
                    <option value="All">All Types</option>
                    @foreach (var type in Enum.GetValues(typeof(MaintenanceType)).Cast<MaintenanceType>())
                    {
                        <option value="@type" selected="@(ViewBag.TypeFilter?.ToString() == type.ToString())">
                            @type.ToString()
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <a asp-action="MaintenanceHistory" class="btn btn-outline-secondary">Clear Filters</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        <strong>No maintenance records found.</strong> Your fridges haven't had any maintenance visits yet.
    </div>
}
else
{
    <div class="row">
        @foreach (var maintenance in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>
                            @maintenance.ScheduledDate.ToString("MMM dd, yyyy")
                        </h6>
                        <div>
                            @{
                                var statusBadgeClass = maintenance.Status switch
                                {
                                    MaintenanceStatus.Scheduled => "bg-primary",
                                    MaintenanceStatus.InProgress => "bg-warning",
                                    MaintenanceStatus.Completed => "bg-success",
                                    MaintenanceStatus.Cancelled => "bg-secondary",
                                    MaintenanceStatus.Rescheduled => "bg-info",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadgeClass">@maintenance.Status</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <strong>Fridge:</strong><br>
                                <span class="text-muted">@maintenance.Fridge?.Model</span><br>
                                <small class="text-muted">SN: @maintenance.Fridge?.SerialNumber</small>
                            </div>
                            <div class="col-sm-6">
                                <strong>Type:</strong><br>
                                <span class="badge badge-info">@maintenance.MaintenanceType</span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(maintenance.TechnicianNotes))
                        {
                            <div class="mb-3">
                                <strong>Technician Notes:</strong>
                                <p class="text-muted mb-0">@maintenance.TechnicianNotes</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(maintenance.ServiceChecklist))
                        {
                            <div class="mb-3">
                                <strong>Service Checklist:</strong>
                                <p class="text-muted mb-0">@maintenance.ServiceChecklist</p>
                            </div>
                        }

                        <div class="row">
                            <div class="col-sm-6">
                                <small class="text-muted">
                                    <strong>Scheduled:</strong><br>
                                    @maintenance.ScheduledDate.ToString("HH:mm")
                                </small>
                            </div>
                            <div class="col-sm-6">
                                @if (maintenance.PerformedDate.HasValue)
                                {
                                    <small class="text-muted">
                                        <strong>Completed:</strong><br>
                                        @maintenance.PerformedDate.Value.ToString("MMM dd, yyyy HH:mm")
                                    </small>
                                }
                                else
                                {
                                    <small class="text-muted">
                                        <strong>Status:</strong><br>
                                        @if (maintenance.Status == MaintenanceStatus.Scheduled)
                                        {
                                            <span class="text-warning">Upcoming</span>
                                        }
                                        else
                                        {
                                            @maintenance.Status
                                        }
                                    </small>
                                }
                            </div>
                        </div>

                        @if (maintenance.AssignedTechnician != null)
                        {
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>
                                    <strong>Technician:</strong> @maintenance.AssignedTechnician.FirstName @maintenance.AssignedTechnician.LastName
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

@functions {
    public string GetStatusBadgeClass(MaintenanceStatus status)
    {
        return status switch
        {
            MaintenanceStatus.Scheduled => "bg-primary",
            MaintenanceStatus.InProgress => "bg-warning",
            MaintenanceStatus.Completed => "bg-success",
            MaintenanceStatus.Cancelled => "bg-secondary",
            MaintenanceStatus.Rescheduled => "bg-info",
            _ => "bg-secondary"
        };
    }
}
