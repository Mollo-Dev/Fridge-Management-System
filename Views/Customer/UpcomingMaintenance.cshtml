@model IEnumerable<MaintenanceRecord>
@using GRP_03_27.Enums

@{
    ViewData["Title"] = "Upcoming Maintenance";
    Layout = "_CustomerLayout";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6">
                <i class="fas fa-calendar-check"></i> @ViewData["Title"]
            </h1>
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        <strong>No upcoming maintenance scheduled.</strong> All your fridges are up to date with maintenance.
    </div>
}
else
{
    <div class="row">
        @foreach (var maintenance in Model.OrderBy(m => m.ScheduledDate))
        {
            <div class="col-lg-6 mb-4">
                <div class="card h-100 @(maintenance.ScheduledDate.Date < DateTime.UtcNow.Date ? "border-warning" : "")">
                    <div class="card-header d-flex justify-content-between align-items-center @(maintenance.ScheduledDate.Date < DateTime.UtcNow.Date ? "bg-warning text-dark" : "bg-primary text-white")">
                        <h6 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>
                            @maintenance.ScheduledDate.ToString("MMM dd, yyyy")
                        </h6>
                        <div>
                            @if (maintenance.ScheduledDate.Date < DateTime.UtcNow.Date)
                            {
                                <span class="badge bg-danger">Overdue</span>
                            }
                            else if (maintenance.ScheduledDate.Date == DateTime.UtcNow.Date)
                            {
                                <span class="badge bg-warning">Today</span>
                            }
                            else if (maintenance.ScheduledDate.Date <= DateTime.UtcNow.AddDays(3).Date)
                            {
                                <span class="badge bg-info">Soon</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Scheduled</span>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <strong>Fridge:</strong><br>
                                <span class="text-muted">@maintenance.Fridge?.Model</span><br>
                                <small class="text-muted">SN: @maintenance.Fridge?.SerialNumber</small>
                            </div>
                            <div class="col-sm-6">
                                <strong>Type:</strong><br>
                                <span class="badge badge-info">@maintenance.MaintenanceType</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <strong>Scheduled Time:</strong><br>
                                <span class="text-muted">@maintenance.ScheduledDate.ToString("HH:mm")</span>
                            </div>
                            <div class="col-sm-6">
                                <strong>Priority:</strong><br>
                                @{
                                    var priorityBadgeClass = maintenance.Priority switch
                                    {
                                        PriorityLevel.High => "bg-danger",
                                        PriorityLevel.Medium => "bg-warning",
                                        PriorityLevel.Low => "bg-info",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @priorityBadgeClass">@maintenance.Priority</span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(maintenance.TechnicianNotes))
                        {
                            <div class="mb-3">
                                <strong>Notes:</strong>
                                <p class="text-muted mb-0">@maintenance.TechnicianNotes</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(maintenance.ServiceChecklist))
                        {
                            <div class="mb-3">
                                <strong>Service Checklist:</strong>
                                <p class="text-muted mb-0">@maintenance.ServiceChecklist</p>
                            </div>
                        }

                        @if (maintenance.AssignedTechnician != null)
                        {
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>
                                    <strong>Assigned Technician:</strong> @maintenance.AssignedTechnician.FirstName @maintenance.AssignedTechnician.LastName
                                </small>
                            </div>
                        }

                        @if (maintenance.ScheduledDate.Date < DateTime.UtcNow.Date)
                        {
                            <div class="mt-3">
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>This maintenance is overdue.</strong> Please contact our support team if you haven't been contacted yet.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Contact Information -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-phone me-2"></i>Need Help?
                </h5>
            </div>
            <div class="card-body">
                <p class="mb-2">
                    If you have questions about your upcoming maintenance or need to reschedule, please contact us:
                </p>
                <div class="row">
                    <div class="col-md-6">
                        <strong>Phone:</strong> +27 11 123 4567<br>
                        <strong>Email:</strong> support@fridgemanagement.co.za
                    </div>
                    <div class="col-md-6">
                        <strong>Hours:</strong> Monday - Friday, 8:00 AM - 5:00 PM<br>
                        <strong>Emergency:</strong> Available 24/7 for urgent issues
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
