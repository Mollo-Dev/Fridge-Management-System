@model IEnumerable<FaultReport>
@using GRP_03_27.Enums

@{
    ViewData["Title"] = "My Fault Reports";
    Layout = "_CustomerLayout";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6">
                <i class="fas fa-clipboard-list"></i> @ViewData["Title"]
            </h1>
            <a asp-action="ReportFault" class="btn btn-warning">
                <i class="fas fa-plus-circle"></i> Report New Fault
            </a>
        </div>
    </div>
</div>

<!-- Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="statusFilter" class="form-label">Status Filter</label>
                <select name="statusFilter" class="form-control" onchange="this.form.submit()">
                    <option value="All">All Statuses</option>
                    @foreach (var status in Enum.GetValues(typeof(FaultStatus)).Cast<FaultStatus>())
                    {
                        <option value="@status" selected="@(ViewBag.StatusFilter?.ToString() == status.ToString())">
                            @status.ToString()
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-8 d-flex align-items-end">
                <a asp-action="MyFaultReports" class="btn btn-outline-secondary">Clear Filters</a>
            </div>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        <strong>No fault reports found.</strong>
        @if (ViewBag.StatusFilter != null && ViewBag.StatusFilter != "All")
        {
            <span>No fault reports match the selected filter.</span>
        }
        else
        {
            <span>You haven't reported any faults yet.</span>
        }
        <a asp-action="ReportFault" class="alert-link">Report your first fault</a>.
    </div>
}
else
{
    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body text-center p-3">
                    <h6>Total</h6>
                    <h4>@Model.Count()</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center p-3">
                    <h6>Reported</h6>
                    <h4>@Model.Count(fr => fr.Status == FaultStatus.Reported)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body text-center p-3">
                    <h6>Diagnosed</h6>
                    <h4>@Model.Count(fr => fr.Status == FaultStatus.Diagnosed)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-white">
                <div class="card-body text-center p-3">
                    <h6>In Progress</h6>
                    <h4>@Model.Count(fr => fr.Status == FaultStatus.InProgress || fr.Status == FaultStatus.Scheduled)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body text-center p-3">
                    <h6>Resolved</h6>
                    <h4>@Model.Count(fr => fr.Status == FaultStatus.Resolved || fr.Status == FaultStatus.Closed)</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body text-center p-3">
                    <h6>Overdue</h6>
                    <h4>@Model.Count(fr => fr.IsOverdue)</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Fault Reports Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Fault Reports
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Report Date</th>
                            <th>Fridge</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Technician</th>
                            <th>Days Open</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>@report.DateReported.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <strong>@report.Fridge?.Model</strong>
                                    <br>
                                    <small class="text-muted">@report.Fridge?.SerialNumber</small>
                                </td>
                                <td>
                                    <div>@Truncate(report.Description, 60)</div>
                                    @if (report.RequestReplacement)
                                    {
                                        <span class="badge bg-info">Replacement Requested</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(report.Status)">
                                        @report.Status.ToString()
                                    </span>
                                    @if (report.IsOverdue)
                                    {
                                        <br>
                                        <small class="text-danger">Overdue</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge @GetPriorityBadgeClass(report.Priority)">
                                        @report.Priority.ToString()
                                    </span>
                                </td>
                                <td>
                                    @if (report.AssignedTechnician != null)
                                    {
                                        <span>@report.AssignedTechnician.FirstName @report.AssignedTechnician.LastName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </td>
                                <td>
                                    <span class="@(report.DaysSinceReport > 7 ? "text-danger fw-bold" : "")">
                                        @report.DaysSinceReport days
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="FaultReportDetails" asp-route-id="@report.FaultReportId"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@functions {
    public string GetStatusBadgeClass(FaultStatus status)
    {
        return status switch
        {
            FaultStatus.Reported => "bg-secondary",
            FaultStatus.Diagnosed => "bg-info",
            FaultStatus.Scheduled => "bg-primary",
            FaultStatus.InProgress => "bg-warning",
            FaultStatus.Resolved => "bg-success",
            FaultStatus.Closed => "bg-dark",
            _ => "bg-secondary"
        };
    }

    public string GetPriorityBadgeClass(PriorityLevel priority)  // Changed parameter type to PriorityLevel
    {
        return priority switch
        {
            PriorityLevel.High => "bg-danger",
            PriorityLevel.Medium => "bg-warning",
            PriorityLevel.Low => "bg-success",
            PriorityLevel.Critical => "bg-danger",
            _ => "bg-secondary"
        };
    }

    public string Truncate(string value, int maxLength)
    {
        if (string.IsNullOrEmpty(value)) return value;
        return value.Length <= maxLength ? value : value.Substring(0, maxLength) + "...";
    }
}