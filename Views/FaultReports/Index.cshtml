@model IEnumerable<GRP_03_27.Models.FaultReport>
@using GRP_03_27.Enums
@{
    ViewData["Title"] = "Fault Reports";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-exclamation-triangle text-warning me-2"></i>Fault Reports
        </h1>
        <div>
            <a asp-action="Dashboard" class="btn btn-info btn-icon-split ml-2">
                <span class="icon text-white-50">
                    <i class="fas fa-tachometer-alt"></i>
                </span>
                <span class="text">Dashboard</span>
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Reports
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Overdue Reports
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.OverdueCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Resolved Reports
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ResolvedCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                My Assigned
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.MyAssignedCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-cog fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Filters</h6>
        </div>
        <div class="card-body">
            <form method="get" class="form-inline">
                <div class="form-group mr-3 mb-2">
                    <label for="statusFilter" class="mr-2">Status:</label>
                    <select class="form-control" id="statusFilter" name="statusFilter">
                        @if (ViewBag.StatusFilter == "All")
                        {
                            <option value="All" selected>All Statuses</option>
                        }
                        else
                        {
                            <option value="All">All Statuses</option>
                        }
                        @if (ViewBag.StatusOptions != null)
                        {
                            foreach (var option in ViewBag.StatusOptions as SelectList)
                            {
                                @if (option.Value == ViewBag.StatusFilter)
                                {
                                    <option value="@option.Value" selected>@option.Text</option>
                                }
                                else
                                {
                                    <option value="@option.Value">@option.Text</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="form-group mr-3 mb-2">
                    <label for="priorityFilter" class="mr-2">Priority:</label>
                    <select class="form-control" id="priorityFilter" name="priorityFilter">
                        @if (ViewBag.PriorityFilter == "All")
                        {
                            <option value="All" selected>All Priorities</option>
                        }
                        else
                        {
                            <option value="All">All Priorities</option>
                        }
                        @if (ViewBag.PriorityOptions != null)
                        {
                            foreach (var option in ViewBag.PriorityOptions as SelectList)
                            {
                                @if (option.Value == ViewBag.PriorityFilter)
                                {
                                    <option value="@option.Value" selected>@option.Text</option>
                                }
                                else
                                {
                                    <option value="@option.Value">@option.Text</option>
                                }
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mb-2">Apply Filters</button>
                <a asp-action="Index" class="btn btn-secondary mb-2 ml-2">Clear</a>
            </form>
        </div>
    </div>

    <!-- Fault Reports Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Fault Reports</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date Reported</th>
                            <th>Customer</th>
                            <th>Fridge</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Technician</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var report in Model)
                            {
                                <tr>
                                    <td>@report.FaultReportId</td>
                                    <td>@report.DateReported.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>@report.Customer?.BusinessName</td>
                                    <td>@report.Fridge?.Model (SN: @report.Fridge?.SerialNumber)</td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="@report.Description">
                                            @report.Description
                                        </div>
                                    </td>
                                    <td>
                                        @{
                                            var statusBadgeClass = report.Status.ToString() switch
                                            {
                                                "Reported" => "badge-warning",
                                                "Diagnosed" => "badge-info",
                                                "Scheduled" => "badge-primary",
                                                "InProgress" => "badge-secondary",
                                                "Resolved" => "badge-success",
                                                "Closed" => "badge-dark",
                                                _ => "badge-secondary"
                                            };
                                        }
                                        <span class="badge @statusBadgeClass">@report.Status.ToString()</span>
                                        @if (report.IsOverdue)
                                        {
                                            <span class="badge badge-danger ml-1">Overdue</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var priorityBadgeClass = report.Priority.ToString() switch
                                            {
                                                "High" => "badge-danger",
                                                "Medium" => "badge-warning",
                                                "Low" => "badge-info",
                                                _ => "badge-secondary"
                                            };
                                        }
                                        <span class="badge @priorityBadgeClass">@report.Priority.ToString()</span>
                                    </td>
                                    <td>
                                        @if (report.AssignedTechnician != null)
                                        {
                                            @report.AssignedTechnician.FirstName @report.AssignedTechnician.LastName
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unassigned</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@report.FaultReportId" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("FaultTechnician") || User.IsInRole("Administrator"))
                                            {
                                                <a asp-action="Update" asp-route-id="@report.FaultReportId" class="btn btn-warning btn-sm">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (string.IsNullOrEmpty(report.AssignedTechnicianId))
                                                {
                                                    <form asp-action="AssignToMe" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@report.FaultReportId" />
                                                        <button type="submit" class="btn btn-primary btn-sm" title="Assign to Me">
                                                            <i class="fas fa-user-plus"></i>
                                                        </button>
                                                    </form>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <br />
                                    No fault reports found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, statusFilter = ViewBag.StatusFilter, priorityFilter = ViewBag.PriorityFilter })">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }

            <div class="mt-3">
                <p class="text-muted">Showing @Model?.Count() of @ViewBag.TotalCount records</p>
            </div>
        </div>
    </div>
</div>