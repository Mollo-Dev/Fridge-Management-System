@model IEnumerable<PurchaseRequest>
@using GRP_03_27.Enums;

@{
    ViewData["Title"] = "Purchase Requests";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-shopping-cart"></i> @ViewData["Title"]</h1>
    @if (User.IsInRole("InventoryLiaison") || User.IsInRole("Administrator"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Request
        </a>
    }
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Request Date</th>
                        <th>Requested By</th>
                        <th>Quantity</th>
                        <th>Reason</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RequestDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.RequestedBy.FullName</td>
                            <td>@item.Quantity</td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 200px;"
                                      title="@item.Reason">
                                    @item.Reason
                                </span>
                            </td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(item.Status)">@item.Status</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    @if (User.IsInRole("PurchasingManager") || User.IsInRole("Administrator"))
                                    {
                                        <a asp-action="Approve" asp-route-id="@item.PurchaseRequestId" class="btn btn-sm btn-success">
                                            <i class="fas fa-check"></i> Approve
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(PurchaseRequestStatus status)
    {
        return status switch
        {
            PurchaseRequestStatus.Pending => "bg-warning",
            PurchaseRequestStatus.Approved => "bg-success",
            PurchaseRequestStatus.Rejected => "bg-danger",
            PurchaseRequestStatus.Processed => "bg-info",
            _ => "bg-secondary"
        };
    }
}