@model PurchaseRequest
@{
    ViewData["Title"] = "Approve Purchase Request";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-check me-2 text-success"></i>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Review Purchase Request</h5>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Requested By:</strong><br>
                        @Model.RequestedBy.FullName
                    </div>
                    <div class="col-md-6">
                        <strong>Request Date:</strong><br>
                        @Model.RequestDate.ToString("yyyy-MM-dd")
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Quantity:</strong><br>
                        <span class="h5">@Model.Quantity</span> units
                    </div>
                    <div class="col-md-6">
                        <strong>Current Status:</strong><br>
                        <span class="badge bg-warning">@Model.Status</span>
                    </div>
                </div>

                <div class="mb-4">
                    <strong>Reason:</strong>
                    <div class="p-3 bg-light rounded mt-2">
                        @Model.Reason
                    </div>
                </div>

                <form asp-action="Approve" method="post">
                    <input type="hidden" name="id" value="@Model.PurchaseRequestId" />

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Are you sure you want to approve this purchase request?</strong><br>
                        This action cannot be undone and will move the request to the approved status.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check"></i> Confirm Approval
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Approval Information</h5>
            </div>
            <div class="card-body">
                <h6>What happens after approval:</h6>
                <ul class="small">
                    <li>Request moves to "Approved" status</li>
                    <li>Purchasing department will process the order</li>
                    <li>Supplier will be contacted</li>
                    <li>Delivery timeline will be established</li>
                </ul>

                <div class="mt-3 p-3 bg-light rounded">
                    <h6>Estimated Impact:</h6>
                    <p class="small mb-1">Adding <strong>@Model.Quantity</strong> units to inventory</p>
                    <p class="small mb-0">Estimated cost: <strong>@(Model.Quantity * 500) USD</strong></p>
                </div>
            </div>
        </div>
    </div>
</div>