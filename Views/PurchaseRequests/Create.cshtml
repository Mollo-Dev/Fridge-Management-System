@model PurchaseRequest
@{
    ViewData["Title"] = "New Purchase Request";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-plus-circle me-2 text-success"></i>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Create Purchase Request</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="Quantity" class="form-label">Quantity *</label>
                        <input asp-for="Quantity" class="form-control"
                               min="1" max="1000"
                               placeholder="Enter number of fridges to purchase" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        <div class="form-text">Number of fridges needed (1-1000).</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Reason" class="form-label">Reason *</label>
                        <textarea asp-for="Reason" class="form-control" rows="4"
                                  placeholder="Please provide a detailed reason for this purchase request..."
                                  maxlength="500"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                        <div class="form-text">Explain why these fridges are needed (max 500 characters).</div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        This request will be submitted for approval and will appear in the purchase requests list.
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-paper-plane"></i> Submit Request
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Guidelines</h5>
            </div>
            <div class="card-body">
                <h6>When to create a purchase request:</h6>
                <ul class="small">
                    <li>Stock levels are low</li>
                    <li>New customer contracts signed</li>
                    <li>Replacing scrapped units</li>
                    <li>Seasonal demand increase</li>
                </ul>

                <div class="mt-3 p-3 bg-light rounded">
                    <h6>Approval Process:</h6>
                    <p class="small mb-0">Requests are reviewed by Purchasing Managers and will be approved or rejected based on budget and need.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}